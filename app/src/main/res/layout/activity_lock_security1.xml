<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mra.com.androidchattingapplicationfinalyear.LockSecurity1"
    >






    <RelativeLayout
        android:id="@+id/setrel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/blue_500"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_action_lock"
        />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Your Password"
        android:textSize="30dp"
        android:fontFamily="casual"
        android:layout_below="@+id/v"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>



    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/np"
        android:layout_below="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:maxLength="6"
        app:met_minCharacters="6"
        android:background="@drawable/setpasswordedittext"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:password="true"
        />


    <Button
        android:id="@+id/sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_500"
        android:text="Set Password"
        android:layout_above="@+id/clearpass"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="2dp"

        />

    <Button
        android:id="@+id/clearpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/darkoranger"
        android:text="clear PAssword"
        android:layout_marginBottom="5dp"

        />
    </RelativeLayout>

</RelativeLayout>
